<Window x:Class="MyDemo.Framwork.AllPanls.DockAndStackPanl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDemo.Framwork.AllPanls"
        mc:Ignorable="d"
        Title="DockAndStackPanl" Height="450" Width="800">
    <DockPanel  >
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
            <Button x:Name="button" Content="确定" Margin="0,5,10,5" Padding="10,3,10,3" Background="Aqua" BorderBrush="Aqua" />
            <Button x:Name="button1" Content="取消" Margin="0,5,10,5" Padding="10,3,10,3" />
        </StackPanel>
        <TextBox x:Name="context" Text=""/>
    </DockPanel>

</Window>
