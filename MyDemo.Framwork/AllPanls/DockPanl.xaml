<Window x:Class="MyDemo.Framwork.AllPanls.DockPanl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDemo.Framwork.AllPanls"
        mc:Ignorable="d"
        Title="DockPanl" Height="450" Width="800">
    <DockPanel  LastChildFill="True" >
        <Button x:Name="button" Content="Button" DockPanel.Dock="Top" />
        <Button x:Name="button1" Content="Button1" DockPanel.Dock="Left" Width="100"/>
        <Button x:Name="button2" Content="Button2" DockPanel.Dock="Bottom" />
        <Button x:Name="button3" Content="Button3" DockPanel.Dock="Right" />
        <Button x:Name="button4" Content="Button4"  />
    </DockPanel>
<!--停靠面板，占据上下左右，默认最后最后一个元素（LastChildFill = "true"）最后一个元素占据最后的剩余部分-->
</Window>
